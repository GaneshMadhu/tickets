<p id="notice"><%= notice %></p>

<h1>Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Created by</th>
      <th>Description</th>
      <th>Severity</th>
      <th>Status</th>
      <th>Cancelled reason</th>
      <th>Cancelled other description</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.created_by %></td>
        <td><%= ticket.description %></td>
        <td><%= ticket.severity %></td>
        <td><%= ticket.status %></td>
        <td><%= ticket.cancelled_reason %></td>
        <td><%= ticket.cancelled_other_description %></td>
        <td><%= ticket.comments %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path %>
